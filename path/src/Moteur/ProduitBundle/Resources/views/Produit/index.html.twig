{% extends "::base.html.twig" %}

{% block body %}
<div class="span9" id="content">


             <div class="panel panel-default">
                 <h3>  {{ nb_produits }} Produits  </h3>               
	             <div style="margin-top: 50px;"  class="panel-heading">
	             	<h1>Liste des Produits les plus Consult√©s : </h1>
		             <table style="margin-top: 100px;" class="table">
		               <thead>
		                   <tr>
		                   <th> Image : </th>
		                   <th> Titre : </th>
		                   <th> Visites : </th>
		                   </tr>
		               </thead>
		               <tbody>
	                   {% for produit in produits %}
							<tr>
								<td><img src="{{ produit.image }}" alt"{{ produit.titre }}"/></td>
								<td><a href="{{ path('moteur_produit_affiche', {'id': produit.id}) }}">{{ produit.titre }}</a></td>						
								<td>{{ produit.visites }}</td>
							</tr>
							{% endfor %}
		               </tbody>
		             </table>
	             </div>
			</div>
     
	
</div>
{% endblock %}
