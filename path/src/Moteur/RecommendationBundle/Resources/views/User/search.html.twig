{% extends "::base.html.twig" %}

{% block body %}
   
    <div class="container">

      <h3> {{ nb_books }} Produits trouv√©s : </h3>
      
            
                    
            
                    {% for book in books %}
                            <div class="media" style="padding-bottom: 10px;padding-top: 10px;">
                                <a class="media-left"  href="/book/{{ book['produit_id'] }}" >
                                     <img src="{{ book['image'] }}" alt="{{ book['produit_id'] }}"  />
                                </a>
                                <div class="media-body">
                                  <h4 class="media-heading">{{ book['titre']|e }}</h4>
