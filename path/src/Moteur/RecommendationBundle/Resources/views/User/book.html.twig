{% extends "::base.html.twig" %}

{% block body %}
   
    <div class="container">
        
        
        <img src="{{ book['Image'] }}" style="margin-left: 470px;"/>
        <h1 style="margin-left: 200px;"> {{ book['Title'] }}</h1> 
        <h3 style="margin-left: 370px;" > {{ book['SubTitle'] }}</h3> 
        
        <p style="margin: 12px 179px 9px;">
        {{ book['Description'] }}
        </p>
        <div class="notation_telechargement">
        <a style="float:right;" href="{{ book['Download'] }}" target="_blank">  <img id="download" src="{{ asset('bundles/user/images/download.png') }}" alt="Telecharger"  /> </a>
        <!-- in this exemple, 12 is the average and 1 is the id of the line to update in DB -->
        <div style="float:left;" class="basic" id="notation" data-average="2" data-id="{{ book['ID'] }}"></div>
        </div>
        

     
        
    </div>
      <div id="footer_cookies" style="display: none"> En poursuivant votre navigation sur ce site, vous acceptez l'utilisation de nos cookies afin de vous offrir une meilleure utilisation de ce site Internet.</div>
    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if necessary -->

    <script src="{{ asset('bundles/user/js/jquery.js') }}"></script>
    <script src="{{ asset('bundles/user/js/bootstrap.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/user/js/jRating.jquery.js')}}"></script>
    <script src="{{ asset('bundles/user/js/gestion.js') }}"></script>
    <script type="text/javascript">
$(document).ready(function(){
     var score = 0;
       
       $("#notation").css("display","none");
       
       $("#download").click(function(){
            score = 6;
            $("#notation").css('display','block');
       });
 
      // get the clicked rate !
      $(".basic").jRating({
        onClick : function(element,rate) {
         alert(rate);
        }
      });
});
</script>
{% endblock %}
