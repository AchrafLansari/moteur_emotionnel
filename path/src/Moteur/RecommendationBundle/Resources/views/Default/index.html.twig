{% extends "::base.html.twig" %}

{% block body %}
	<div class="span9">
		<h1>Produits pouvant vous intéresser</h1>
	
		<div class="row">
			<div class="span3">
				{% if page > 1 %}<a href="{{ path('moteur_recommendation_homepage', {page: page-1, nombre: nombre}) }}">Page précédente</a>{% endif %}
			</div>
			<div class="span3">
				Page actuelle : {{ page }}
			</div>
			<div class="span3">
				<a href="{{ path('moteur_recommendation_homepage', {'page': page+1, 'nombre': nombre}) }}">Page suivante</a>
			</div>
		</div>
		
		{% for produit in resultats %}
		<a href="{{ path('moteur_produit_page', {'id': produit.produit_id}) }}">
			<div class="row">
				<div class="span8">
					{{ produit.titre }}
					<br>Auteur : {{ produit.auteur }}
				</div>
				<div class="span1">
					{{ produit.score }}
				</div>
			</div>
		</a>
		{% endfor %}
	</div>
{% endblock %}